{
  "manifest_version": 3,
  "name": "Elegant ChatGPT Navigation",
  "description": "Elegant ChatGPT Navigation",
  "version": "1.0.0",
  "author": "grayfallstown",
  "browser_specific_settings": {
    "gecko": {
      "id": "elegant_chatgpt_navigation@grayfallstown.de",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "icons": {
    "128": "icon/logo.png"
  },
  "permissions": [],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
